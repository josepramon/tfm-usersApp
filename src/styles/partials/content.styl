/**
 * # Mosaiqo frontend - content area
 *
 * Central container, contains the work area for a given module and optionally
 * a items menu for that module
 *
 */


// Layout (flex stuff, pretty weird):
// ---------------------------------------------
main
  display: flex
  flex: 1 1 auto
  flex-flow: column nowrap

  position: relative
  max-width: 1200px;
  padding: 30px 20px
  margin: 0 auto
  overflow: auto

  .inner
    display: flex
    flex: 1


// Section header, duh
#moduleHeader
  flex: 0 1 auto


// Inner container, used to clear floats and flexboxes
#moduleContent
  display: flex
  flex: 1 1 auto
  overflow: auto
  min-height: 200px

.sectionContainer,
.loading-container,
#moduleContent > form
  flex: 1

.sectionContainer,
#moduleContent > form
  padding: 20px




// containers created by backbone
main > .inner
  display: flex
  flex: 1
  flex-direction: column



// Block styles
// ---------------------------------------------

// Header
// (section title, breadcrumbs, etc)
#moduleHeader

  // only for screen readers
  h1, h2, h3
    position: absolute
    width: 1px
    height: 1px
    margin: -1px
    padding: 0
    overflow: hidden
    clip: rect(0,0,0,0)
    border: 0
