.articles
  list-style: none
  margin: 0
  padding: 0 20px 0 0

.articleListItem
.article .main
  position: relative
  padding: 0 15px 20px
  margin-bottom: 10px
  border: solid 1px #e0dfde
  border-radius: 3px
  background: #fff
  box-shadow: 1px 1px 2px rgba(0,0,0,.05)

  header
    position: relative
    margin: 0 -15px 10px
    padding: 15px 10px
    padding-right: 5.5em
    min-height: 2em
    border-bottom: solid 1px #eee
    background-color: #fbfbfb

    h1, h3
      margin: 0
      font-size: 1.3em

      &:before
        content: "\f016"
        font-family: FontAwesome
        margin: 0 5px
        color: #ccc

      a
        color: #666

    .date
      position: absolute
      top:   5px
      right: 10px
      font-size: .8em
      color: #ccc

      &:before
        content: "\f073"
        font-family: FontAwesome


.actions
  padding-top: 20px
  text-align: right



