.article
  margin: 0

  img
    max-width: 100%

  aside
    padding-left: 30px
    padding-right: 0

  .block
    padding-bottom: 30px
    margin-bottom:  30px
    border-bottom: dashed 1px #ccc

    &:last-child
      border-bottom: none

    h4
      margin-bottom: 20px
      color: #ccc

.related-articles,
.category-articles
  ul
    padding: 0
    list-style: none
    font-size: smaller

  li
    position: relative
    margin-bottom: .5em
    padding-left: 11px

    &:before
      position: absolute
      left: -10px
      top: 2px
      content: "\f016"
      font-family: FontAwesome
      margin: 0 5px
      color: #ccc


.kbDashboard
  .row
    margin-bottom: 20px

  .block
    padding: 0 10px
    h3
      margin-bottom: 20px
      color: #ccc

