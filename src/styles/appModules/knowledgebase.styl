#helpDeskHead
  position: absolute
  left: 0
  right: 0
  bottom: 0
  background-color: rgba(0,0,0,.3)

  .inner
    max-width: 1200px
    padding: 20px
    margin: 0 auto

  h1
    display: block
    margin: 0 0 .2em
    font-size: 1.5em



.articles
  list-style: none
  margin: 0
  padding: 0 20px 0 0


.articleListItem
.article .main
  position: relative
  padding: 0 15px 20px

  header
    position: relative
    margin: 0 -15px 10px
    padding: 15px 10px
    padding-right: 5.5em
    min-height: 2em
    border-bottom: solid 1px #ddd

    h1, h3
      margin: 0
      font-size: 1.3em

      &:before
        content: "\f016"
        font-family: FontAwesome
        margin: 0 8px 0 5px
        color: #aaa

    .date
      position: absolute
      top:   5px
      right: 10px
      font-size: .8em
      color: #bbb

      &:before
        content: "\f073"
        font-family: FontAwesome



.article .main
  border: solid 1px #e0dfde
  border-radius: 3px
  background: #fff
  box-shadow: 1px 1px 2px rgba(0,0,0,.05)

  header
    border-color #eee
    background-color: #fbfbfb


.articleListItem
  margin-bottom: 20px

  .date
    top:    auto
    bottom: 5px

  .actions
    padding-top: 10px
    text-align: right



.articles-parent-description
  color: #999
  padding: 0 20px 10px
  border-bottom: dashed 1px #ccc
  margin-bottom: 20px
  font-size: .9em


.article
  margin: 0

  img
    max-width: 100%

  aside
    padding-left: 30px
    padding-right: 0

  .block
    padding-bottom: 30px
    margin-bottom:  30px
    border-bottom: dashed 1px #ccc

    &:last-child
      border-bottom: none

    h4
      margin-bottom: 20px
      color: #aaa

    &.attachments
      h5
        font-size: 1em

      .description
        padding-left: 1.4em
        margin: -.4em 0 1em
        color: #888


.category-articles,
.article aside .block
  ul
    padding: 0
    list-style: none
    font-size: smaller

  li
    position: relative
    margin-bottom: .5em

.category-articles li
.related-articles li,
  padding-left: 11px

  &:before
    position: absolute
    left: -10px
    top: 2px
    content: "\f016"
    font-family: FontAwesome
    margin: 0 5px
    color: #ccc


.kbDashboard
  .row
    margin-bottom: 20px

  .block
    margin-bottom: 30px

  .block-title
    padding: 10px
    margin-bottom: 10px
    border-bottom: solid 1px #ddd

    h3
      margin: 0
      font-size: 1.2em

    h3, h3 a
      color: #aaa

  .block-content
    position: relative
    min-height: 200px
    padding: 10px 10px 0

  .actions
    position: absolute
    bottom: 0

  .category-articles
    margin-left: 15px

    li
      padding-left: 14px

      a
        color: #666

      a:hover
        color: #30b5e5

@media screen and (max-width: 760px)
  .kbDashboard .block-content
    min-height: 0px
    padding-bottom: 30px
