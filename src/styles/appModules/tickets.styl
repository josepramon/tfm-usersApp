// Tickets specific styles
// ---------------------------------------------


// Tickets main view
// ==================

#ticketsContainer
  margin-top: 20px

#ticketsBlock
  h3
    margin-top: 0
    padding-bottom: 15px
    font-size: 20px
    border-bottom: solid 1px #ddd
    color: #aaa


// tickets list
#ticketsList
  color: #888
  margin: 10px 0 20px

  .sectionContainer
    padding: 0

  .gridFilter
    padding: 5px 0
    margin-bottom: 25px
    overflow: auto

    .search
      position: relative
      width: 250px
      float: right

      .clear
        position: absolute
        top: .3em
        right: 3em
        z-index: 10

  .backgrid
    .id
      width: 7em
    .category, .statuses, .updated_at
      width: 8em


// make the grid content smaller
@media screen and (max-width: 600px)
  #ticketsList .backgrid
    font-size: smaller
    th
      width: auto !important
      &.sortable
        position: relative
        &:after
          position: absolute
          top: 1em
    td a
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis
      max-width: 200px


// remove the no-wrap from bootstrap
// because the links applied to the titles can be very long
@media screen and (max-width: 767px)
  #ticketsList .table-responsive .backgrid td a
    white-space: normal



#ticketsNodataContainer
  display: none


// open|close tickets menu
#ticketsNav
  margin:  0
  padding: 2px 0
  list-style: none
  float: left

  li
    display: inline-block
    border-right: solid 1px #ddd

    &:last-child
      border-right: none

  button
    padding: 0
    margin: 0 5px

    &:before
      background-color: #ddd
      bottom: -5px

    &:active, &.active
      box-shadow: none
      &:before
        transform: scaleX(1)

    &[disabled]
      color: #ccc !important


// new ticket form
#ticketsCreate .note-editable
  min-height: 100px



// Ticket details view
// ====================

.ticket .main
  header
    h1, h3
      &:before
        content: "\f145"
        font-family: FontAwesome
        margin: 0 8px 0 5px
        color: #aaa


.ticketBody
  min-height: 200px
  margin-bottom: 30px


.ticketComments,
.ticketActions
  border-top: solid 1px #ddd
  margin-left:  -15px
  margin-right: -15px
  padding: 20px 15px


.ticketComments
  min-height: 100px
  background: #f3f3f3

  header
    padding: 0 !important
    margin:  0 !important
    background-color: transparent !important

    h5
      margin-top: 0

  .comments
    padding: 0
    list-style: none

  .comment
    display: table
    width: 100%
    margin-bottom: 10px
    background-color: #fff
    border-left: solid 3px #30B5E5
    border-radius: 2px
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1)

  .comment-meta,
  .comment-contents
    display: table-cell

  .comment-meta
    width: 120px
    min-height: 80px
    padding: 10px
    text-align: center
    vertical-align: middle
    border-right: 1px solid #efefef

    .img, em
      float: none

    em
      display: block
      font-style: normal

  .comment-contents
    padding: 20px

    img
      max-width: 100%
      max-height: 300px
      width:  auto !important
      height: auto !important


.ticketActions
  margin-bottom: -20px
  text-align: right
  background-color: #f9f9f9


.ticketAttachments
  background: #fbfbfb
  padding: 5px 10px
  border-radius: 3px
  margin-top: 25px
  font-size: smaller
  box-shadow: inset 1px 1px 1px rgba(0,0,0,.08), inset -1px 0px 1px rgba(0,0,0,.08)

  ul
    list-style: none
    padding: 0

  .description
    padding-left: 1.4em
    color: #888
    margin: -.4em 0 1em



// details block (aside)
.ticketDetails
  dl
    margin: 0
    font-size: smaller

  dt, dd
    padding: 10px 0

  dt
    font-weight: normal
    color: #ccc

    float: left
    clear: left
    width: 32%
    max-width: 8em

  dd
    border-bottom: solid 1px #eee

    &:last-child
      border-bottom: none


// other
.statusTimeline .date
.comment-meta .date
    font-size: .8em
    color: #bbb

    &:before
      content: "\f017"
      font-family: FontAwesome
      margin-right: 4px

.statusTimeline .date
  position: absolute
  right: 0
  bottom: -20px


.ticketCode
  display: inline-block
  color: #888
  border: solid 1px #eee
  background-color: transparent

a .ticketCode
  color: #30b5e5
  &:before
    content: ''

.grid .ticketCode
  font-size: smaller
