// General block styling
// (used on the knowledge base and tickets)
// ---------------------------------------------

.mainContent .main,
.contentListItem
  position: relative
  padding: 0 15px 20px

  header
    position: relative
    margin: 0 -15px 10px
    padding: 15px 10px
    padding-right: 5.5em
    min-height: 2em
    border-bottom: solid 1px #ddd

    h1, h3
      margin: 0
      font-size: 1.3em
      line-height: 1.4em

    .date
      position: absolute
      top:   5px
      right: 10px
      font-size: .8em
      color: #bbb

      &:before
        content: "\f073"
        font-family: FontAwesome



.mainContent .main
  margin-bottom: 20px
  border: solid 1px #e0dfde
  border-radius: 3px
  background: #fff
  box-shadow: 1px 1px 2px rgba(0,0,0,.05)

  header
    border-color #eee
    background-color: #fbfbfb


.contentListItem
  margin-bottom: 20px

  .date
    top:    auto
    bottom: 5px

  .actions
    padding-top: 15px
    text-align: right



.mainContent
  margin: 0

  img
    max-width: 100%

  aside
    padding-left: 30px
    padding-right: 0

  .block
    padding-bottom: 30px
    margin-bottom:  30px
    border-bottom: dashed 1px #ccc

    &:last-child
      border-bottom: none

    h4
      margin-bottom: 20px
      color: #aaa

    &.attachments
      h5
        font-size: 1em

      .description
        padding-left: 1.4em
        margin: -.4em 0 1em
        color: #888


@media screen and (max-width: 991px)
  .mainContent aside
    padding-left:  15px
    padding-right: 15px


.list-block
  ul
    padding: 0
    list-style: none
    font-size: smaller

  li
    position: relative
    margin-bottom: .5em
