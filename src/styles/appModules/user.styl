.login
  width: 380px
  margin: 50px auto 0
  padding: 60px 40px 40px
  border: solid 1px #e6e6e6
  border-radius: 4px

  background: #fdfdfd
  box-shadow: 0 0 15px rgba(255,255,255,.1)


  .form-group
    width: 90%
    margin: 0 auto 15px


  label
    color: #666


  [name="request"] .help-block
    color: red



@media screen and (max-width: 400px)
  .login
    width: 100%
    border: none
    box-shadow: none
