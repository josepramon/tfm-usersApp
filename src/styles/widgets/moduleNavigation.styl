/**
 * # Mosaiqo frontend - widgets
 *
 * Module main navigation
 */


.moduleNavigation
  text-align: center

  ul
    padding: 0

  ul, li, a
    display: inline-block

  li
    float: left
    margin-right: 5px

    &:last-child
      margin-right: 0

  a
    position: relative
    width: 100px
    height: 60px
    overflow: hidden
    text-decoration: none

    color: $appTheme['logoGray']
    background-color: $appTheme['bgColorLight2']

    subtleVolume()

  &:before
    content: none

  .icon, span
    display: block
    transition: all 300ms

  .icon
    position: relative
    top: 0
    font-size:   30px
    line-height: 60px
    transform-origin: center center
    transition-duration: 300ms
    transition-property: transform, color, top

  span // text
    position: absolute
    bottom: -40px
    width: 100%
    font-size: 12px
    transition-duration: 300ms
    transition-property: bottom, background-color

  a:hover, a.active
    .icon
      top: -5px
      transform: scale(.6)
    span
      bottom: 0
      color: #fff

  a:hover
    color: $appTheme['logoBlue']
    span
      background-color: $appTheme['logoBlue']

  a.active
    color: $appTheme['logoPink']
    span
      background-color: $appTheme['logoPink']



// Media queries
// ---------------------------------------------
@media screen and (max-width: 600px)
  .moduleNavigation
    li
      margin-right: 2px
    a
      width:  55px
      height: 35px

    .icon
      top: 0 !important
      font-size:   20px
      line-height: 35px

    span
      display: none
