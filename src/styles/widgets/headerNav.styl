#headerNav
  padding: 0
  margin: 0
  list-style: none

  li
    display: inline-block
    margin: 0 10px


@media screen and (max-width: 600px)
  #headerNav li
    margin: 0 7px

@media screen and (max-width: 480px)
  #headerNav li
    margin: 0

    a
      padding-left:  4px
      padding-right: 4px
      background-color: rgba(0,0,0,.5)
      border-radius: 0

  .authenticated #headerNav a
    background-color: transparent
