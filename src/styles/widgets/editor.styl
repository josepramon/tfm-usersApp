/**
 * Editor overrides
 */

body
  .redactor-toolbar
    background-color: $appTheme['bgColorLight']
    box-shadow: inset 0 1px 2px rgba(0, 0, 0, .2)

  .note-editor.note-frame
    border: none
    overflow: visible

  .note-editable
    min-height: 100px

  .note-style .dropdown-menu li
    border-bottom: solid 1px rgba(255,255,255,.2)
    padding-top:    3px
    padding-bottom: 3px

    &:last-child
      border-bottom: none
