<form>
  <div class="form-group">
    <label for="name">{{t "attachments::Title"}}</label>
    <input type="text" class="form-control" id="name" name="name" placeholder="{{t "attachments::Title"}}" value="{{name}}">
  </div>
  <div class="form-group">
    <label for="description">{{t "attachments::Description"}}</label>
    <textarea class="form-control" rows="3" id="description" name="description" placeholder="{{t "attachments::Description"}}">{{description}}</textarea>
  </div>
</form>
