<div class="form-group">
  <label for="username" class="control-label">
    {{t "username"}}
  </label>
  <div>
    <div class="input-group">
      <span class="input-group-addon" id="user-addon">
        <i class="icon icon-user"></i>
      </span>
      <input type="text" class="form-control" id="username" name="username" aria-describedby="user-addon" placeholder="{{t "username"}}" autocorrect="off" autocapitalize="off">
    </div>
    <span class="help-block hidden"></span>
  </div>
</div>

<div class="form-group">
  <label for="password" class="control-label">
    {{t "password"}}
  </label>

   <a href="#user/recover-password" class="control-label-extra" tabindex="-1">({{t "forgot password?"}})</a>
  <div>
    <div class="input-group">
      <span class="input-group-addon" id="password-addon">
        <i class="icon icon-asterisk"></i>
      </span>
      <input type="password" class="form-control" id="password" name="password" aria-describedby="password-addon" placeholder="{{t "password"}}">
    </div>
    <span class="help-block hidden"></span>
  </div>
</div>
