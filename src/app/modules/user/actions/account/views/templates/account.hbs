<div class="form-group">
  <label for="username" class="control-label">
    {{t "UserModel::username"}}
  </label>
  <div>
    <input type="text" class="form-control" id="username" name="username" placeholder="{{t "UserModel::username"}}" value="{{username}}">
    <span class="help-block hidden"></span>
  </div>
</div>

<div class="form-group">
  <label for="email" class="control-label">
    {{t "UserModel::email"}}
  </label>
  <div>
    <input type="text" class="form-control" id="email" name="email" placeholder="{{t "UserModel::email"}}" value="{{email}}">
    <span class="help-block hidden"></span>
  </div>
</div>


<div class="panel-group" id="accordion">
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingOne">
      <h4 class="panel-title">
        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne" class="collapsed">
          {{t "user::Change password"}}
        </a>
      </h4>
    </div>
    <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
      <div class="panel-body">

        <div class="form-group">
          <label for="oldPassword" class="control-label">
            {{t "UserModel::oldPassword"}}
          </label>
          <div>
            <input type="password" class="form-control" id="oldPassword" name="oldPassword" placeholder="{{t "UserModel::oldPassword"}}">
            <span class="help-block hidden"></span>
          </div>
        </div>

        <div class="form-group">
          <label for="password" class="control-label">
            {{t "UserModel::password"}}
          </label>
          <div>
            <input type="password" class="form-control" id="password" name="password" placeholder="{{t "UserModel::password"}}">
            <span class="help-block hidden"></span>
          </div>
        </div>

        <div class="form-group">
          <label for="rePassword" class="control-label">
            {{t "UserModel::rePassword"}}
          </label>
          <div>
            <input type="password" class="form-control" id="rePassword" name="rePassword" placeholder="{{t "UserModel::rePassword"}}">
            <span class="help-block hidden"></span>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
